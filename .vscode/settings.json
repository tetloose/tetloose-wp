{
    "phpsab.standard": "WordPress",
    "phpsab.fixerEnable": true,
    "phpsab.snifferEnable": true,
    "phpsab.executablePathCS": "vendor/squizlabs/php_codesniffer/bin/phpcs",
    "phpsab.executablePathCBF": "vendor/squizlabs/php_codesniffer/bin/phpcbf",
    "php.validate.executablePath": "/opt/homebrew/opt/php@7.4/bin/php",
    "intelephense.environment.phpVersion": "7.4.33",
    "intelephense.stubs": [
        "wordpress",
        "Core",
        "date",
        "json",
        "mysqli",
        "pcre",
        "Phar",
        "standard",
        "zip",
        "zlib",
        "zend"
    ],
    "intelephense.telemetry.enabled": false,
    "intelephense.diagnostics.undefinedTypes": false,
    "intelephense.diagnostics.undefinedProperties": false,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "SCSS": "CSS",
        "nunjucks": "html",
        "njk": "html",
        "nj": "html",
        "javascript": "javascriptreact",
        "typescript": "typescript",
        "php": "html"
    },
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "stylelint.validate": [
        "css",
        "scss"
    ],
    "auto-close-tag.activationOnLanguage": [
        "php"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[php]": {
        "editor.defaultFormatter": "valeryanm.vscode-phpsab"
    },
    "files.exclude": {
        ".editorconfig": true,
        ".env": true,
        ".env.example": true,
        ".eslintrc.js": true,
        ".gitignore": true,
        ".prettierrc": true,
        ".stylelintrc.js": true,
        "composer.json": true,
        "composer.lock": true,
        "declaration.d.ts": true,
        "gulpfile.babel.js": true,
        "jest.config.js": true,
        "package.json": true,
        "postcss.config.js": true,
        "tetloose.code-workspace": true,
        "TODO.md": true,
        "toolkit": true,
        "tsconfig.json": true,
        "webpack.config.js": true,
        "wp-cli.yml": true,
        "yarn.lock": true,
        ".gulp": true,
        ".husky": true,
        ".scripts": true,
        "config": true,
        "node_modules": true,
        "vendor": true,
        "web": true,
        ".gitmodules": true,
        "app": true,
        "package": true,
        "pattern-library": true,
        "vitest.config.ts": true,
        "vitest.setup.ts": true,
        ".vscode": true,
        ".phpcs.xml": true
    },
    "workspace.isHidden": true
}
