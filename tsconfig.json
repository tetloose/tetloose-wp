{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "node"
    },
    "base": ".",
    "paths": {
        "@components/*": [
            "src/js/components/*"
        ]
    },
    "include": [
        "./src/js/**/*.ts",
        "./src/js/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "web/app/themes/tetloose-theme/assets/**/*.js"
    ]
}
