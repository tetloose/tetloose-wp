{
    "name": "tetloose-wp",
    "version": "1.0.0",
    "description": "",
    "main": "./gulpfile.babel.js",
    "keywords": [
        "Wordpress",
        "Bedrock",
        "Webpack",
        "Gulp",
        "Yarn",
        "JEST",
        "Typescript",
        "CSS Modules",
        "SCSS",
        "WCAG AAA",
        "Speed Performance",
        "Shell",
        "SSH",
        "Deployment",
        "Backups",
        "Standard wordpress package"
    ],
    "author": "James Tetley tetloose.com",
    "license": "ISC",
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "private": true,
    "scripts": {
        "setup": "./toolkit setup",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable",
        "serve": "ENV=dev gulp serve --no-warnings",
        "dev": "gulp clean --no-warnings; ENV=dev gulp --no-warnings; ENV=dev gulp php --no-warnings; ENV=dev gulp serve --no-warnings",
        "build": "gulp clean --no-warnings; gulp build --no-warnings; ENV=dev gulp php --no-warnings",
        "git:commit": "./toolkit git-commit",
        "deploy": "composer update; yarn build; yarn git:commit; ./toolkit deploy",
        "uploads:push": "./toolkit uploads-push",
        "uploads:pull": "./toolkit uploads-pull",
        "db:push": "./toolkit db-push",
        "db:pull": "./toolkit db-pull",
        "clone:from": "yarn uploads:pull; yarn db:pull",
        "clone:to": "yarn uploads:push; yarn db:push",
        "package": "composer update; yarn build; ./toolkit package",
        "backup": "./toolkit backup",
        "plugins": "composer require",
        "test": "jest --detectOpenHandles",
        "update-snapshot": "jest --updateSnapshot"
    },
    "dependencies": {
        "gulp-shell": "^0.8.0"
    },
    "devDependencies": {
        "@babel/core": "^7.20.7",
        "@babel/preset-env": "^7.20.2",
        "@babel/register": "^7.18.9",
        "@types/jest": "^29.4.0",
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1",
        "autoprefixer": "^10.4.13",
        "babel-loader": "^9.1.0",
        "browser-sync": "^2.27.11",
        "browserslist": "^4.21.4",
        "css-loader": "^6.7.3",
        "css-minimizer-webpack-plugin": "^4.2.2",
        "css-modules-typescript-loader": "^4.0.1",
        "eslint": "^8.31.0",
        "fs": "^0.0.1-security",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-clean-css": "^4.3.0",
        "gulp-dart-sass": "^1.0.2",
        "gulp-eslint-new": "^1.7.1",
        "gulp-filter": "^7.0.0",
        "gulp-fontgen": "^0.2.5",
        "gulp-hash": "^4.2.2",
        "gulp-icomoon-builder": "^1.0.0",
        "gulp-if": "^3.0.0",
        "gulp-imagemin": "7.1.0",
        "gulp-phpcs": "^3.1.0",
        "gulp-plumber": "^1.2.1",
        "gulp-real-favicon": "^0.3.2",
        "gulp-rename": "^2.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-stylelint": "^13.0.0",
        "gulp-svg-sprite": "^2.0.1",
        "husky": "^8.0.3",
        "imagemin-mozjpeg": "^9.0.0",
        "imagemin-pngquant": "9.0.2",
        "jest": "^29.4.2",
        "jest-css-modules": "^2.1.0",
        "jest-environment-jsdom": "^29.4.2",
        "mini-css-extract-plugin": "^2.7.2",
        "moment": "^2.29.4",
        "node-notifier": "^10.0.1",
        "pinst": "^3.0.0",
        "postcss": "^8.4.21",
        "postcss-loader": "^7.0.2",
        "prettier": "^2.8.1",
        "sass": "^1.57.0",
        "sass-loader": "^13.2.0",
        "style-loader": "^3.3.1",
        "stylelint": "^14.16.1",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-order": "^5.0.0",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "browserslist": [
        "defaults"
    ]
}
