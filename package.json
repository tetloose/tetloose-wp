{
    "name": "tetloose-wp",
    "version": "1.0.0",
    "description": "Wordpress Boilerplate",
    "main": "./gulpfile.babel.js",
    "keywords": [
        "Wordpress",
        "Bedrock",
        "Webpack",
        "Gulp",
        "Yarn",
        "Typescript",
        "CSS Modules",
        "SCSS",
        "WCAG AAA",
        "Speed Performance",
        "Shell",
        "SSH",
        "Deployment",
        "Backups",
        "Standard wordpress package"
    ],
    "author": "James Tetley <tetloose@gmail.com>",
    "license": "MIT",
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "private": true,
    "scripts": {
        "setup": "bash toolkit setup",
        "dev": "gulp clean && gulp php && ENV=dev gulp && yarn serve",
        "serve": "ENV=dev gulp serve",
        "build": "gulp clean && gulp php && gulp build",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "lint": "eslint --ext .js,.ts src && stylelint \"src/**/*.scss\"",
        "lint:fix": "eslint --ext .js,.ts --fix . && stylelint \"src/**/*.scss\" --fix",
        "favicon": "gulp cleanFavicon && gulp favicon",
        "deploy": "composer update && yarn build && yarn git:commit && bash toolkit deploy",
        "uploads:push": "bash toolkit uploads-push",
        "uploads:pull": "bash toolkit uploads-pull",
        "db:push": "bash toolkit db-push",
        "db:pull": "bash toolkit db-pull",
        "clone:from": "yarn uploads:pull && yarn db:pull",
        "clone:to": "yarn uploads:push && yarn db:push",
        "package": "yarn build && bash toolkit package",
        "backup": "bash toolkit backup",
        "plugins": "composer require",
        "library": "bash toolkit add-component",
        "gen:component": "bash toolkit add-component",
        "git:commit": "bash toolkit git-commit",
        "pre-commit": "yarn lint && vitest --watch false",
        "create-hook": "husky add .husky/pre-commit \"yarn pre-commit\"",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@babel/core": "^7.23.6",
        "@babel/preset-env": "^7.23.6",
        "@babel/register": "^7.22.15",
        "@testing-library/jest-dom": "^6.1.5",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vitest/coverage-v8": "^1.1.0",
        "autoprefixer": "^10.4.13",
        "babel-loader": "^9.1.0",
        "browser-sync": "^2.27.11",
        "browserslist": "^4.21.4",
        "css-loader": "^6.7.3",
        "css-minimizer-webpack-plugin": "^4.2.2",
        "css-modules-typescript-loader": "^4.0.1",
        "dotenv": "^16.0.3",
        "eslint": "^8.31.0",
        "fs": "^0.0.1-security",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-clean": "^0.4.0",
        "gulp-clean-css": "^4.3.0",
        "gulp-dart-sass": "^1.0.2",
        "gulp-eslint-new": "^1.7.1",
        "gulp-filter": "^7.0.0",
        "gulp-icomoon-builder": "^1.0.0",
        "gulp-if": "^3.0.0",
        "gulp-phpcs": "^3.1.0",
        "gulp-plumber": "^1.2.1",
        "gulp-real-favicon": "^0.3.2",
        "gulp-rename": "^2.0.0",
        "gulp-rev": "9",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-stylelint": "^13.0.0",
        "husky": "^8.0.3",
        "jsdom": "^23.0.1",
        "mini-css-extract-plugin": "^2.7.2",
        "mkdirp": "^3.0.1",
        "msw": "^1.3.2",
        "pinst": "^3.0.0",
        "postcss": "^8.4.21",
        "postcss-loader": "^7.0.2",
        "prettier": "^2.8.1",
        "sass": "^1.57.0",
        "sass-loader": "^13.2.0",
        "style-loader": "^3.3.1",
        "stylelint": "^14.16.1",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-order": "^5.0.0",
        "terser-webpack-plugin": "^5.3.7",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "vitest": "^1.3.1",
        "vitest-fetch-mock": "^0.2.2",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "browserslist": [
        "defaults"
    ]
}
