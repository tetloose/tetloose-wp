[class*=u-sprite-] {
	display: inline-block;
	position: relative;

	&::before {
		content: '';
		display: block;
	}

	&::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	svg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
}
{{#shapes}}

.{{#selector.shape}}{{expression}}{{/selector.shape}} {
	max-width: rem({{width.outer}}px);

	&::before {
		padding-bottom: intrinsic({{height.outer}}, {{width.outer}});
	}
}
{{/shapes}}
